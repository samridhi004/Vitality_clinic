<div class="container">
  <form action="/patient" method="POST" autocomplete="off">
    <div class="row">
      <div class="col-25">
        <label for="fname">First Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="fname" name="firstname" placeholder="First Name" value="{{userData.firstname}}">
      <div class="text-danger">
        
      </div>
      </div>
     
    </div>
    <div class="row">
      <div class="col-25">
        <label for="lname">Last Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="lname" name="lastname" placeholder="Last Name" value="{{userData.lastname}}">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="gender">Gender</label>
      </div>
      <div class="col-75">
      <label class="btn btn-primary"><input type="radio" id="female-radio" class="form-control" name="gender" value="female">Female</label>
         <label class="btn btn-primary"><input type="radio"  id="male-radio" class="form-control" name="gender" value="male">Male</label>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="subject">Phone No.</label>
      </div>
      <div class="col-75">
        <label>Phone No.</label>
        <input type="number" class="form-control" name="phone" placeholder="Phone No." value="{{userData.phone}}">
      </div>
    </div>
    <div class="row">
       <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Add Patient</button>
       <a class="btn btn-secondary" href="/patient/list"><i class='bx bx-list-ul'></i>View All</a>
    </div>
  </form>
</div>